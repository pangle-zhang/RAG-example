.merchants-container {
  width: 100%;
  /* height: 300px; 控制列表框高度 */
  border: 1px solid #ccc;
  /* border-radius: 10px; */
  overflow: hidden;
}

.merchant {
  display: flex;
  align-items: center; /* 垂直居中 */
  justify-content: space-between; /* 左右分布 */
  padding: 10px;
  font-size: 16px;
  border-bottom: 1px solid #ddd;
}

.merchant:hover {
  background-color: #efefef;
}

.merchant:last-child {
  border-bottom: none;
}

.merchant view {
  flex: 1;
  padding-right: 20px;
  word-wrap: break-word; /* 允许换行 */
  white-space: normal; /* 正常换行 */
}

.merchant image {
  width: 80rpx;
  height: 80rpx;
  margin-right: 12px;
}